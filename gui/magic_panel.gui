					}
				}	
			}

			flowcontainer = {
				spacing = 10

				flowcontainer = {
					direction = vertical
					parentanchor = vcenter

					icon = {
						size = { 130 130 }
						visible =  "[EqualTo_CFixedPoint(Scope.GetValue, '(CFixedPoint)1')]"
						texture = "gfx/interface/icons/company_icons/basic_agriculture_1.dds"
					}
